rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }
    
    // Company logo - Admin can write, all authenticated users can read
    match /logos/{logoFile} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() && 
                      request.resource.size < 1 * 1024 * 1024 && // Max 1MB
                      request.resource.contentType.matches('image/.*'); // Images only
    }
    
    // PDF receipts - Creator and admin can read/write
    match /receipts/{receiptFile} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                      request.resource.size < 5 * 1024 * 1024 && // Max 5MB
                      request.resource.contentType == 'application/pdf';
    }
    
    // PDF reports - Admin and authorized users can read/write
    match /reports/{reportFile} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                      request.resource.size < 10 * 1024 * 1024 && // Max 10MB
                      request.resource.contentType == 'application/pdf';
    }
    
    // Temporary uploads - User can upload their own files
    match /temp/{userId}/{fileName} {
      allow read, write: if isAuthenticated() && 
                            request.auth.uid == userId &&
                            request.resource.size < 5 * 1024 * 1024; // Max 5MB
    }
  }
}
